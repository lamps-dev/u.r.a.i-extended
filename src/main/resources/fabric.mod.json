{
  "schemaVersion": 1,
  "id": "u_r_a_i_extension",
  "version": "${version}",

  "name": "U.R.A.I Extension",
  "description": "Quality-of-life extension for U.R.A.I with auto-welcome messages and network fixes. Includes fixed U.R.A.I. bundled inside (Jar-in-Jar) with URL encoding support. Configure via Mod Menu.",
  "authors": ["lamps-dev"],
  "contact": {
    "homepage": "https://modrinth.com/mod/urai-extended",
    "sources": "https://github.com/lamps-dev/u.r.a.i-extended",
    "issues": "https://github.com/lamps-dev/u.r.a.i-extended/issues"
  },

  "license": "MIT",
  "icon": "assets/u_r_a_i_extension/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": ["org.lampyt.urai.extension.client.URAIExtensionClient"],
    "main": ["org.lampyt.urai.extension.URAIExtension"],
    "modmenu": ["org.lampyt.urai.extension.config.ModMenuIntegration"]
  },

  "mixins": [
    "u_r_a_i_extension.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": "*",
    "minecraft": "${minecraft_version}",
    "java": ">=21",
    "cloth-config": ">=21.0.0"
  },

  "suggests": {
    "modmenu": "*"
  }
}
